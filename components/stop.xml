<component>

    <api>
        <prop name="station" type="string" default="Munich"></prop>
    </api>

    <styles>
        <style name="style_cont" width="100%" height="50" radius="0" bg_opa="0" border_width="0" pad_all="0" layout="flex" flex_track_place="center" flex_cross_place="center" pad_column="10" text_font="nn_bold_30" text_color="0x5c5a5a" />
        <style name="style_stop" width="30" height="30" radius="15" border_width="0" bg_color="0x5c5a5a" bg_opa="255" />
        <style name="style_cont_checked" text_color="0x286af9" bg_color="0x286af9"/>
    </styles>
   <view extends="lv_obj" checkable="true" clickable="false"  state_trickle="true">
    <style name="style_cont" />
    
    
    <lv_obj clickable="false" checkable="true">
        <style name="style_stop" />
        <style name="style_cont_checked" selector="checked" />

    </lv_obj>
    <lv_label text="$station" checkable="true">
        <style name="style_cont_checked" selector="checked" />
    </lv_label>
   </view>
</component>