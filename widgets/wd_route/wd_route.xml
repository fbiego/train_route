<widget>

    <previews>
        <preview width="400" height="300" />
    </previews>

    <styles>
        <style name="style_route" width="400" height="300" />
        <style name="cont" width="100%" height="100%" bg_opa="0" border_width="0" pad_all="10" layout="flex" flex_flow="column" flex_main_place="space_between" pad_row="0"/>
        <style name="stop" width="30" height="30"  radius="15"/>
        <style name="style_slider" bg_color="0x4b4b4b" bg_opa="255" />
        <style name="style_indicator" bg_color="0x286af9" />
        <style name="clear" bg_opa="0" />
    </styles>

    <api>
        <element access="get" name="stops" type="lv_obj">
            <arg name="index" type="int" />
        </element>
        <prop name="value" type="int"></prop>
        <prop name="bind_subject" type="subject"></prop>
        <prop name="observer" type="obj"></prop>
    </api>


   <view extends="lv_obj">
    <style name="style_route" />

    

    <lv_obj width="content" height="100%" style_bg_opa="0" style_radius="0" style_border_width="0" style_pad_all="20" style_pad_bottom="35" style_pad_top="35">
        <lv_slider min_value="100" max_value="0" value="0" width="10" height="100%" >
            <style name="style_slider" />
            <style name="style_indicator" selector="indicator" />
            <style name="clear" selector="knob" />
        </lv_slider>
    </lv_obj>

    <lv_obj clickable="false" name="stop_cont">
        <style name="cont" />

    </lv_obj>



   </view>
</widget>